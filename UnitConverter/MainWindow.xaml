<Window
    x:Class="UnitConverter.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:UnitConverter"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="400"
    SizeToContent="Height"
    mc:Ignorable="d">
    <Border Margin="20">
        <Grid>

            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="60" />
            </Grid.RowDefinitions>

            <ComboBox
                Name="InputUnitComboBox"
                Grid.Column="0"
                Margin="0,0,0,0"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                FontSize="20"
                ItemsSource="{Binding Units}"
                SelectedItem="{Binding SelectedInputUnit, Mode=TwoWay}"/>

            <ComboBox
                Name="OutputUnitComboBox"
                Grid.Column="2"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                FontSize="20"
                ItemsSource="{Binding Units}"
                SelectedItem="{Binding SelectedOutputUnit, Mode=TwoWay}"/>

            <TextBox
                Name="InputTextBox"
                Grid.Row="1"
                Grid.Column="0"
                Margin="0,10,0,0"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                BorderBrush="Gray"
                BorderThickness="2"
                FontSize="20"/>

            <Border
                Grid.Row="1"
                Grid.Column="2"
                Margin="0,10,0,0"
                BorderBrush="Gray"
                BorderThickness="2">

                <TextBlock
                    Name="OutputTextBlock"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="20" />

            </Border>

            <Polygon
                Grid.Row="0"
                Grid.RowSpan="2"
                Grid.Column="1"
                Margin="15"
                Fill="Gray"
                Points="0,4 6,4 6,0 10,5, 6,10 6,6 0,6"
                Stretch="Uniform" />

        </Grid>
    </Border>

</Window>
